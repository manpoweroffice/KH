<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="myMem"> 
	
	<select id="selectAll" resultType="mybatis.User">
	select * from member
	</select>
	
	<insert id="insert" parameterType="mybatis.User">
	insert into member values(#{memberid},#{password},#{name},#{email})
	</insert>
	
	<update id="update" parameterType= "mybatis.User" >
	update member set name=#{name} where memberid=#{memberid} 
	</update>  
	
	<select id="selectOne" parameterType="String" resultType="mybatis.User">
	select * from member where memberid=#{memberid}
	</select>
	<delete id="delete" parameterType="String">
	delete from member where memberid=#{memberid}
	</delete>
	
	<select id= "selectCount" parameterType= "mybatis.User" resultType="int">
	select count(*) from member
	</select>  
	
</mapper>   